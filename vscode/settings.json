    "better-comments.tags": [
        {
            // Alert/ Warning
            "tag":              "!",
            "color":            "#FF2D00",
            "strikethrough":    false,
            "underline":        false,
            "backgroundColor":  "transparent",
            "bold":             false,
            "italic":           false
        },
        {
            // Question
            "tag":              "?",
            "color":            "#3498DB",
            "strikethrough":    false,
            "underline":        false,
            "backgroundColor":  "transparent",
            "bold":             false,
            "italic":           false
        },
        {
            // 'Remove this comment'
            "tag":              "//",
            "color":            "#474747",
            "strikethrough":    true,
            "underline":        false,
            "backgroundColor":  "transparent",
            "bold":             false,
            "italic":           false
        },
        {
            // TODOs
            "tag":              "todo",
            "color":            "#FF8C00",
            "strikethrough":    false,
            "underline":        false,
            "backgroundColor":  "transparent",
            "bold":             false,
            "italic":           false
        },
        {
            // Important information is highlighted
            "tag":              "*",
            "color":            "#98C379",
            "strikethrough":    false,
            "underline":        false,
            "backgroundColor":  "transparent",
            "bold":             false,
            "italic":           false
        }
    ]

